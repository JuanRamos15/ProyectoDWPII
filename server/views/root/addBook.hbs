<div class="row">
    <div class="col s12 m10 offset-m1 18 offset-12">
        <div class="card">
            <div class="card-image">
                <img src="/" alt="Imagen de Creacion de libro">
            </div>
            <span class="card-title add-book" style="font-weight: bolder;">
                    Registrar Libro
            </span>
            <form autocomplete="off" action="/book/add" method="post">
                <div class="card-content">
                    <div class="input-field">
                        <label for="book-title">
                            Título del Libro
                        </label>
                        <input type="text"
                        id="book-title"
                        name="title"
                        placeholder="Ingrese el título del libro"
                        class="validate" required>
                    </div>
                    <div class="input-field">
                        <label for="book-author">
                            Autor del Libro
                        </label>
                        <input type="text"
                        id="book-author"
                        name="author"
                        placeholder="Ingrese el autor del libro"
                        class="validate" required>
                    </div>
                    <div class="input-field">
                        <label for="book-category">
                            Categoría del Libro
                        </label>
                        <input type="text"
                        id="book-category"
                        name="category"
                        placeholder="Ingrese la categoría del libro"
                        class="validate" required>
                    </div>
                    <div class="input-field">
                        <label for="book-isbn">
                            ISBN del Libro
                        </label>
                        <input type="text"
                        id="book-isbn"
                        name="isbn"
                        placeholder="Ingrese el ISBN del libro"
                        class="validate" required>
                    </div>
                    <div class="input-field">
                        <label for="book-copies">
                            Número de Copias Disponibles
                        </label>
                        <input type="number"
                        id="book-copies"
                        name="copies"
                        placeholder="Ingrese el número de copias disponibles"
                        class="validate" required>
                    </div>
                </div>
                <div class="card-action">
                    <button class="blue darken-3 waves-effect waves-light btn">
                       <i class="material-icons left">note_add</i> Registrar
                    </button>
                </div>
            </form>
        </div>
    </div>
