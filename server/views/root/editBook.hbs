{{> navbarRoot}}

<div class="row">
    <div class="col s12 m10 offset-m1 18 offset-12">
        <div class="card">
            <div class="card-image">
                <img src="/images/booksBackground.jpg" alt="Imagen de Creacion de libro">
            </div>
            <form autocomplete="off" action="/root/edit/{{ book._id }}?_method=put" method="post">
                <div class="card-content">
                    <div class="input-field">
                        <label for="book-title">
                            Título del Libro
                        </label>
                        <input type="text"
                        id="book-title"
                        name="bookTitle"
                        placeholder="Ingrese el título del libro"
                        class="validate"  value='{{book.bookTitle}}' required>
                    </div>
                    <div class="input-field">
                        <label for="book-author">
                            Autor del Libro
                        </label>
                        <input type="text"
                        id="bookAuthor"
                        name="bookAuthor"
                        placeholder="Ingrese el autor del libro"
                        class="validate" value='{{book.bookAuthor}}' required>
                    </div>
                    <div class="input-field">
                        <label for="book-category">
                            Categoría del Libro
                        </label>
                        <input type="text"
                        id="book-category"
                        name="bookCategory"
                        placeholder="Ingrese la categoría del libro"
                        class="validate"  value='{{book.bookCategory}}' required>
                    </div>
                    <div class="input-field">
                        <label for="book-isbn">
                            ISBN del Libro
                        </label>
                        <input type="text"
                        id="book-isbn"
                        name="bookISBN"
                        placeholder="Ingrese el ISBN del libro"
                        class="validate" value='{{book.bookISBN}}' required>
                    </div>
                    <div class="input-field">
                        <label for="book-copies">
                            Número de Copias Disponibles
                        </label>
                        <input type="number"
                        id="book-copies"
                        name="bookQuantity"
                        placeholder="Ingrese el número de copias disponibles"
                        class="validate"  value='{{book.bookQuantity}}'required>
                    </div>
                </div>
                <div class="card-action">
                    <button class="blue darken-3 waves-effect waves-light btn">
                       <i class="material-icons left">edit</i> Editar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>